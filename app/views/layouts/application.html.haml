!!!

%html
%head
	%title Blokks
	= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
	= javascript_include_tag 'application', 'data-turbolinks-track' => true
	= csrf_meta_tags

%body.container

	.navbar
		= link_to "All Pages", root_path, class: "btn btn-default"
		
		- if user_signed_in?
			= link_to "Create Page" , new_page_path, class: "btn btn-default"
			= link_to "Sign Out", destroy_user_session_path, method: :delete, class: "btn btn-default"
		- else
			= link_to "Sign Up", new_user_registration_path, class: "btn btn-default"
			= link_to "Sign In", new_user_session_path, class: "btn btn-default"

	%p.notice= notice
	%p.alert= alert

	= yield
